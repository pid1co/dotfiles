{
  "editor.fontSize": 14,
  "editor.fontFamily": "Julia Mono",
  "editor.fontLigatures": true,
  "editor.formatOnType": false,
  "editor.formatOnPaste": true,
  "redhat.telemetry.enabled": false,
  "terminal.integrated.fontFamily": "Hack Nerd Font",
  "grammarly.files.include": ["**/readme.md", "**/README.md", "**/*.txt", "**/*.md"],
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.sideBar.location": "left",
  //"workbench.statusBar.visible": false,
  "editor.wordBasedSuggestions": "off",
  "editor.minimap.enabled": false,
  //"editor.scrollbar.verticalScrollbarSize":  0,
  //"editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "workbench.iconTheme": "vscode-icons",
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "workbench.settings.applyToAllProfiles": [],
  "grammarly.config.suggestions.UnnecessaryEllipses": true,
  "editor.rulers": [120],
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 20,
  "C_Cpp.default.compilerPath": "/usr/bin/gcc",
  "C_Cpp.default.includePath": ["$default", "/usr/include/**"],
  "github.copilot.editor.enableAutoCompletions": true,
  "prettier.printWidth": 130,
  "terminal.integrated.rescaleOverlappingGlyphs": false
}
